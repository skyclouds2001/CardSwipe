<!--pages/friend/friend.wxml-->

<view class="collect">

<!-- 标题部分 -->
  <view class="title">我的朋友</view>

  <!-- 内容区域 -->
  <view class="content">

    <!-- 列表表头部分 -->
    <view class="content_title">
      <view class="content_title_icon">微信头像</view>
      <view class="content_title_name">朋友名称</view>
    </view>
    
    <!-- 列表内容部分 -->
    <view class="content_list">
      <navigator class="content_list_item" wx:for="{{friend_info}}" wx:key="name" url="/pages/friendInfo/friendInfo">
        <view class="content_item_icon">
          <image src="{{item.icon_url}}" mode="heightFix"></image>
        </view>
        <view class="content_item_name">{{item.name}}</view>
      </navigator>
    </view>

  </view>

</view>
