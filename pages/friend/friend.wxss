/* pages/friend/friend.wxss */

.collect {
  width: 100vw;
  height: 100vh;
}

/* 标题部分 */
.title {
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 50rpx;
  color: rgb(107, 168, 209);

  padding: 30rpx;
}

/* 礼物列表标题部分 */
.content_title {
  background-color: rgb(255, 236, 236);

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 30rpx;

  height: 90rpx;
}
.content_title > view {
  display: flex;
  justify-content: center;
  align-items: center;
}
.content_title_icon {
  flex: 1;
}
.content_title_name {
  flex: 1;
}

/* 礼物列表内容部分 */
.content_list_item {
  display: flex;
  justify-content: center;
  align-items: center;

  height: 270rpx;

  border-bottom: 1rpx solid #ccc;
}
.content_list_item > view {
  display: flex;
  justify-content: center;
  align-items: center;

  height: 100%;
}
.content_item_icon {
  flex: 1;
}
.content_item_icon image {
  height: 80%;
}
.content_item_name {
  flex: 1;
}

