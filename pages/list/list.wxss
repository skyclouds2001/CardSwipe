/* pages/list/list.wxss */

@import "/styles/arrow.wxss";

.list {
  display: block;

  width: 100vw;
  height: 100vh;
}

/* 中间选择部分 */
.choice {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;

  margin: 50rpx 50rpx;
  padding: 25rpx 25rpx;

  background-color: white;
  border-radius: 25rpx;
  box-shadow: 5rpx 5rpx 10rpx #ccc, -5rpx -5rpx 10rpx #fff;
}

.choice > view {
  flex-grow: 1;

  display: flex;
  align-items: center;
  justify-content: space-between;

  width: calc(100% - 50rpx);
  height: auto;
  margin: 25rpx;
}

.choice > view > view {
  width: 150rpx;
  height: 75rpx;

  line-height: 75rpx;
  text-align: center;
}

.identity > view {
  color: white;

  background-color: rgb(142, 139, 139);
  border-radius: 25rpx;
  box-shadow: 5rpx 5rpx 7.5rpx rgb(194, 189, 189);

  position: relative;
  top: 0;
  left: 0;

  transition: all 125ms ease 0ms;
}
.identity > .select-i {
  background-color: rgb(255, 179, 179);
}
.identity > view:active {
  top: 2.5rpx;
  left: 2.5rpx;
  box-shadow: 2.5rpx 2.5rpx 7.5rpx rgb(194, 189, 189);
}

.sex, .habbit {
  position: relative;
  top: 0;
  left: 0;
}

.sex_content, .habbit_content {
  width: 150rpx;
  height: 75rpx;

  color: whitesmoke;
  font-weight: 500;

  border-radius: 25rpx;
  background-color: rgb(160, 199, 226);
  box-shadow: 5rpx 5rpx 7.5rpx rgb(194, 189, 189);

  position: relative;
  top: 0;
  left: 0;

  transition: all 125ms ease 0ms;
}
.sex_content:active, .habbit_content:active {
  top: 2.5rpx;
  left: 2.5rpx;
  box-shadow: 2.5rpx 2.5rpx 7.5rpx rgb(194, 189, 189);
}

.sex_content > text, .habbit_content > text {
  display: inline-block;
}

/* 性别选择下拉框 爱好下拉框 */
.choose_sex, .choose_habbit {
  position: absolute;
  top: 75rpx;
  left: 0rpx;

  width: 150rpx;
  height: auto;

  background-color: white;
  border-radius: 25rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  overflow: scroll;

  z-index: 9;

  transition: all 1000ms ease 0ms;
}

/* 下拉框显示及隐藏 */
.show {
  visibility: visible;
}
.show.choose_sex {
  height: 150rpx;
}
.show.choose_habbit {
  height: 450rpx;
}
.hide {
  visibility: hidden;
  height: 0rpx;
}

/* 下拉框项目样式 */
.choose_sex > view, .choose_habbit > view {
  width: 150rpx;
  height: 75rpx;

  background-color: rgb(174, 221, 255);
  border-bottom: 1rpx solid #ccc;

  display: flex;
  justify-content: center;
  align-items: center;

  transition: all 1000ms ease 0ms;
}

/* 记录选中内容 */
.select {
  background-color: rgb(255, 199, 199);
}

/* 下部礼物信息部分 */
.main_content {
  width: 100%;
  height: auto;
}

.gift_item {
  display: flex;
  justify-content: center;
  align-items: center;

  height: 200rpx;
  margin: 0rpx 50rpx;

  border-bottom: 1rpx solid #ccc;
}

.gift_item > view {
  display: flex;
  justify-content: center;
  align-items: center;

  height: 100%;
}

.gift_name {
  flex: 2;
}

.gift_love_num {
  flex: 2;
}

.gift_img {
  flex: 3;
}

.gift_img > image {
  height: 80%;
}
