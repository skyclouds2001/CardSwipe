/* pages/welcome/welcome.wxss */

.welcome {
  width: 100vw;
  height: 100vh;

  position: relative;
}

/* 背景部分 */
.background {
  display: flex;
  justify-content: center;
  align-items: center;

  z-index: 0;

  width: 100%;
  height: 100%;
}
.bgBox {
  width: 50vw;
  height: 100vh;
}

/* 内容区整体设置 */
.content {
  z-index: 10;

  width: 100%;
  height: 100%;

  position: absolute;
  top: 0;
  left: 0;

  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* 内容区之一 */
.content_1 {
  position: relative;

  padding-bottom: 50rpx;
}
.content_1 .text text {
  line-height: 50rpx;
  font-size: 30rpx;
}
.content_1 .icon_love_black {
  position: absolute;
  left: -125rpx;
  top: -125rpx;

  height: 25rpx;
}
.content_1 .icon_love_black image {
  height: 150rpx;

  transform: rotate(-15deg);
}

/* 内容区之二 */
.content_2 {
  position: relative;

  width: 100%;
  height: 75%;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content_2 .text_or {
  font-size: 100rpx;
}

.content_2 .choose_sex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.content_2 .choose_sex view {
  width: 250rpx;
  height: 125rpx;
  margin: 50rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  font-weight: bold;
  font-size: 40rpx;
  letter-spacing: 1rpx;
  color: #eee;

  border-radius: 25rpx/12.5rpx;
  box-shadow: 5rpx 5rpx 10rpx #999, 0rpx 0rpx 10rpx #eee;

  transition: all 125ms ease 0ms;

  position: relative;
  top: 0;
  left: 0;
  box-shadow: 5rpx 5rpx 10rpx #999;
}
.content_2 .choose_sex view:active {
  top: 5rpx;
  left: 5rpx;
  box-shadow: 0rpx 0rpx 10rpx #999;
}

.content_2 .choose_sex .girl {
  background-color: rgb(230, 118, 118);
}

.content_2 .choose_sex .boy {
  background-color: rgb(82, 153, 201);
}

.content_2 .choice_img {
  width: 75%;

  border-radius: 25rpx;
  box-shadow: 0rpx 0rpx 5rpx #999;
}

.content_2 .icon_love_pink {
  position: absolute;
  top: -45rpx;
  left: 15rpx;

  height: 150rpx;

  transform: rotate(-20deg);
}

/* 内容区之三 */
/* 总体 */
.content_3 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 固定窗口文字部分 */
.content_3 .info {
  position: fixed;
  top: 25rpx;

  width: 75vw;
  height: 75rpx;

  background-color: rgb(248, 248, 248);
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 5rpx #ccc;

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 40rpx;
  font-weight: 500;
}

/* 提示文字部分 */
.content_3 .text {
  text-align: center;
  font-size: 28rpx;
  line-height: 1.5em;
  letter-spacing: 2.5rpx;

  width: 75vw;
  margin-top: 100rpx;
}

/* 标签部分 */
.content_3 .tag {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  align-content: center;

  width: 75vw;
  margin-top: 25rpx;
}
.content_3 .tag view {
  background-color: transparent;

  width: 5em;
  margin: 2vw 8vw;
  border: 5rpx solid #d248eb;

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 30rpx;
  line-height: 2em;
  color: #d248eb;
  font-weight: bold;
  letter-spacing: 1.5rpx;

  border-radius: 25rpx/1em;
  backdrop-filter: saturate(75%);

  transition: all 250ms ease;
}
.content_3 .tag .select {
  color: #f0a2fd;
  border: 5rpx solid #f0a2fd;
}

/* 输入框部分 */
.input input {
  background-color: white;

  margin-top: 20rpx;
  padding: 0rpx 15rpx;
  height: 2em;
  width: 15em;

  border-radius: 10rpx;
  box-shadow: 2.5rpx 2.5rpx 5rpx #ccc inset, -2.5rpx -2.5rpx 5rpx #fff inset;

  line-height: 2em;

  transition: all 125ms ease;
}
.placeForInput {
  text-align: center;
  line-height: 2em;
}

/* submit部分 */
.submit {
  margin-top: 25rpx;

  font-size: 30rpx;
  font-weight: bold;

  transition: all 125ms ease;

  position: relative;
  top: 0;
  left: 0;

  box-shadow: 10rpx 10rpx 15rpx var(--grayShadow);
}
.submit:active {
  top: 5rpx;
  left: 5rpx;

  box-shadow: 5rpx 5rpx 15rpx var(--grayShadow);
}
