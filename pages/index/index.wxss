/**index.wxss**/

/* 页面整体设置 */
page {
  display: block;

  width: 100vw;
  height: 100vh;

  font-size: 28rpx;
}

.index {
  background-color: var(--theme-color-blue);

  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index::before {
  position: absolute;
  top: 0;
  left: 0;

  content: '';

  background-color: var(--theme-color-pink);

  width: 100%;
  height: 100%;

  clip-path: circle(50% at right 50%);
}

.index > view {
  z-index: 1;
}
.index > view:nth-child(1) {
  flex-grow: 5;
}
.index > view:nth-child(2) {
  flex-grow: 2;
}

/* 上部图片及配套内容 */
.imageBox {
  display: flex;
  justify-content: center;
  align-items: center;

  width: 100%;
  height: auto;

  background-color: transparent;
}

.imageBox > view {
  position: relative;

  width: auto;
  height: 100%;

  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.imageBox > view > image {
  width: auto;
  height: 100%;

  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx #ccc;
}

.imageBox > view > navigator {
  position: absolute;
  right: 1rpx;
  top: 1rpx;

  width: 5em;
  height: 2.5em;
  background-color: rgb(164, 173, 179);

  color: white;
  font-size: 26rpx;
  line-height: 2.5em;
  text-align: center;
  font-weight: bold;

  border-radius: 10rpx;
}

.icon_star {
  position: absolute;
  bottom: 1rpx;
  right: 1rpx;

  font-size: 48rpx;
  line-height: 60rpx;
  text-align: center;

  width: 60rpx;
  height: 60rpx;

  display: block;

  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 10rpx #999;
}

.collect {
  color: rgb(247, 199, 211);
}

/* 下部礼物信息部分 */
.giftInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  width: auto;
  height: auto;
  margin: 50rpx;
  padding: 50rpx;

  background-color: rgba(255, 255, 255, 0.75);
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);

  box-sizing: border-box;

}

.name {
  flex-grow: 2;
}
.name > text {
  font-size: 40rpx;
  font-weight: bold;
}

.price {
  flex-grow: 2;
  align-self: flex-start;
}

.content {
  flex-grow: 5;
}
.content > text {
  text-align: left;
  line-height: 1.5em;
}
