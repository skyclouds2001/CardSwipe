/**index.wxss**/

/* 页面整体设置 */
page {
  display: block;

  width: 100vw;
  height: 100vh;

  font-size: 28rpx;
}

.index {
  background-color: var(--theme-color-blue);

  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index::before {
  position: absolute;
  top: 0;
  left: 0;

  content: '';

  background-color: var(--theme-color-pink);

  width: 100%;
  height: 100%;

  clip-path: circle(50% at right 50%);
}

.index > view:nth-child(2) {
  z-index: 1;
  flex-grow: 5;
}
.index > view:nth-child(3) {
  z-index: 1;
  flex-grow: 2;
}

/* 上部图片及配套内容 */
.imageBox {
  display: flex;
  justify-content: center;
  align-items: center;

  width: 100%;
  height: auto;
  margin: 25rpx 0rpx;

  background-color: transparent;
}

.imageBox > view {
  position: relative;

  width: auto;
  height: 100%;

  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.imageBox > view > image {
  width: auto;
  height: 100%;

  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx #ccc;
}

.icon_star {
  position: absolute;
  bottom: 1rpx;
  right: 1rpx;

  font-size: 48rpx;
  line-height: 60rpx;
  text-align: center;

  width: 60rpx;
  height: 60rpx;

  display: block;

  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 10rpx #999;
}

.collect {
  color: rgb(247, 199, 211);
}

/* 下部礼物信息部分 */
.giftInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  width: calc(100% - 100rpx);
  height: auto;
  margin: 25rpx 50rpx;
  padding: 50rpx;

  background-color: rgba(255, 255, 255, 0.75);
  border-radius: 25rpx;
  backdrop-filter: blur(15rpx);
  box-shadow: 0rpx 0rpx 15rpx #ccc;

  box-sizing: border-box;
}

.giftInfo > view {
  width: 100%;
}

.name {
  flex-grow: 2;

  text-align: center;
}
.name > text {
  font-size: 40rpx;
  font-weight: bold;
}

.price {
  flex-grow: 2;

  text-align: center;
}
.price > text {
  font-weight: 500;
  font-size: 35rpx;
  color: var(--red);
}

.content {
  flex-grow: 4;

  padding: 0rpx 0rpx 15rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}
.content > text {
  text-align: left;
  line-height: 1.5em;
}

.detail {
  flex-grow: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}
.detail > navigator {
  width: 10em;
  height: 2em;
  max-height: 100%;

  font-size: 30rpx;
  line-height: 2.5em;
  text-align: center;
  font-weight: bold;

  border-radius: 25rpx;

  position: relative;
  top: 0;
  left: 0;
}

/* 解决cu-custom出现的bug */
.cu-custom .cu-bar {
  left: 0;
  right: 0;
}

.bar {
  color: white;
  font-weight: 500;
  letter-spacing: 2.5rpx;
}
