/* pages/welcome/welcome.wxss */

.welcome {
  width: 100vw;
  height: 100vh;

  position: relative;
}

/* 背景部分 */
.background {
  display: flex;
  justify-content: center;
  align-items: center;

  z-index: 0;

  width: 100%;
  height: 100%;
}
.bgBox {
  width: 50vw;
  height: 100vh;
}

/* 内容区整体设置 */
.content {
  z-index: 10;

  width: 100%;
  height: 100%;

  position: absolute;
  top: 0;
  left: 0;

  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* 内容区之一 */
.content_1 {
  position: relative;

  padding-bottom: 50rpx;
}
.content_1 .text text {
  line-height: 50rpx;
  font-size: 30rpx;
}
.content_1 .icon_love_black {
  position: absolute;
  left: -125rpx;
  top: -125rpx;

  height: 25rpx;
}
.content_1 .icon_love_black image {
  height: 150rpx;

  transform: rotate(-15deg);
}

/* 内容区之二 */
.content_2 {
  position: relative;

  width: 100%;
  height: 75%;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content_2 .text_or {
  font-size: 100rpx;
}
.content_2 .choose_sex {
  display: flex;
  justify-content: center;
  align-items: center;
}
.content_2 .choose_sex view {
  width: 200rpx;
  height: 150rpx;

  color: #eee;
  margin: 50rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  font-weight: bold;
  font-size: 35rpx;
}
.content_2 .choose_sex .girl {
  background-color: rgb(230, 118, 118);
}
.content_2 .choose_sex .boy {
  background-color: rgb(82, 153, 201);
}
.content_2 .choice_img {
  width: 75%;
}
.content_2 .icon_love_pink {
  position: absolute;
  top: -45rpx;
  left: 15rpx;

  height: 150rpx;

  transform: rotate(-20deg);
}

/* 内容区之三 */
/* 总体 */
.content_3 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 固定窗口文字部分 */
.content_3 .info {
  position: fixed;
  top: 5rpx;
  left: 0;

  width: 100vw;
  height: 75rpx;
  background-color: rgb(248, 248, 248);

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 40rpx;
}

/* 提示文字部分 */
.content_3 .text {
  text-align: center;
  font-size: 28rpx;
  line-height: 45rpx;
  width: 75vw;
}

/* 标签部分 */
.content_3 .tag {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  align-content: center;

  width: 75vw;
  margin-top: 50rpx;
}
.content_3 .tag view {
  color: #eee;
  background-color: #a4a4a4;

  width: 20vw;
  margin: 2vw 8vw;

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 28rpx;
  line-height: 56rpx;

  border-radius: 5rpx;
}
.select {
  background-color: rgb(255, 161, 184) !important;
}

/* 输入框部分 */
.input input {
  /* color: #ccc; */
  background-color: white;

  margin-top: 20rpx;
  padding: 10rpx;
}
.placeForInput {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* submit部分 */
.submit {
  margin-top: 30rpx;
  background-color: #ccc;
  padding: 10rpx 40rpx;
  border: 1rpx solid #999;

  font-size: 30rpx;
  font-weight: bold;

  border-radius: 10rpx;
}
