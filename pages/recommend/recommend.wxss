/* pages/recommend/recommend.wxss */

.recommend {
  width: 100vw;
  height: 100vh;
}

/* 标题部分 */
.title {
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 50rpx;
  color: rgb(107, 168, 209);

  padding: 30rpx;
  height: 110rpx;
}

/* 提示文字部分 */
.text {
  padding-left: 50rpx;

  font-weight: bold;
  line-height: 1.5em;
  letter-spacing: 1rpx;

  height: 125rpx;
}

/* 标签部分 */
.contain {
  height: calc(100vh - 110rpx - 125rpx - 84rpx - 20rpx);
  width: 100vw;
  margin-top: 20rpx;

  position: relative;
}
.tag {
  position: absolute;
  top: 0vh;
  left: 0vw;

  width: 5em;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  z-index: 9;
}
.tag .name {
  text-align: center;
}
.tag .icon {
  width: 1.5em;
}

/* 按钮部分 */
.button{
  display: flex;
  justify-content: center;
  align-items: center;

  height: 84rpx;
}
.button button {
  font-size: 28rpx;
  font-weight: normal;
  line-height: 2em;
  color: #fff;

  width: 6em;
  height: 2em;
  padding: 0rpx;

  background-color: var(--theme-color-blue);
}
.button button:hover {
  background-color: var(--theme-color-pink);
  color: #555;
}
