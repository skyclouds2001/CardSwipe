/* pages/problem/problem.wxss */

.problem {
  width: auto;
  height: auto;
  min-width: 100vw;
  min-height: 100vh;
  background-color: white;
}

/* 下部表单部分 */
.problem-text {
  width: 100vw;
  height: 50vh;
  padding: 50rpx;
}

/* 文本框部分 */
.problem-text textarea {
  background-color: white;
  border: 1rpx solid #b2d6f7;
  border-radius: 25rpx;

  padding: 50rpx;
  width: 100%;
  height: 100%;

  transition: all 250ms ease-in-out 0ms;
}

.problem-text .textarea-focus {
  border: 1rpx solid #7cb7ee;
  box-shadow: 0rpx 0rpx 25rpx 0rpx #94c7f7;
}

.textarea-placeholder {
  line-height: 1.5em;
  letter-spacing: 2rpx;
}

/* 按钮部分 */
.problem-button {
  width: 100vw;
  height: 100rpx;
  padding: 50rpx;
}
.problem-button button {
  background-color: rgb(107,168,209);
  border-radius: 25rpx;
  box-shadow: 5rpx 5rpx 15rpx 0rpx #ccc;

  height: 3em;
  width: 12em;
  padding: 0rpx;

  font-weight: 500;
  font-size: 35rpx;
  line-height: 3em;
  text-align: center;
  color: white;
  letter-spacing: 0.1em;

  transition: all 250ms ease 0s;
}
.problem-button button:active {
  box-shadow: 0rpx 0rpx 10rpx 0rpx #ccc;
}
