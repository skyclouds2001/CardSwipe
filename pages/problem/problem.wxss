/* pages/problem/problem.wxss */

.problem {
  width: auto;
  height: auto;
}

/* 下部表单部分 */
.problem_text {
  width: 100vw;
  height: 50vh;
  padding: 50rpx;
}
.problem_text textarea {
  background-color: white;
  border-radius: 25rpx;
  box-shadow:  10rpx 10rpx 25rpx #d9d9d9 inset,
              -10rpx -10rpx 25rpx #ffffff inset;

  padding: 50rpx;
  width: 100%;
  height: 100%;
}

.problem_button {
  width: 100vw;
  height: 100rpx;
  padding: 50rpx;
}
.problem_button button {
  background-color: rgb(107,168,209);
  border-radius: 25rpx;

  height: 3em;
  width: 12em;
  padding: 0rpx;

  font-weight: 500;
  font-size: 35rpx;
  line-height: 3em;
  text-align: center;
  color: white;

  transition: all 250ms ease 0s;
}
.problem_button button:active {
  box-shadow: 0rpx 0rpx 10rpx 5rpx #ccc;
}

/* textarea placeholder样式 */
.ph {
  line-height: 1.5em;
  letter-spacing: 2rpx;
}
