<!--pages/collect/collect.wxml-->

<view class="collect">

  <!-- 标题部分 -->
  <view class="title">我的收藏</view>

  <!-- 内容区域 -->
  <view class="content">

  <!-- 列表表头部分 -->
    <view class="content_title">
      <view class="content_title_id">编号</view>
      <view class="content_title_name">礼物名称</view>
      <view class="content_title_tag">标签</view>
      <view class="content_title_img">礼物图片</view>
    </view>
    
    <!-- 列表内容部分 -->
    <view class="content_list">
      <view class="content_list_item" wx:for="{{gift_data}}" wx:key="gift_id" bindtouchstart="handleTouchStart" bindtouchend="handleTouchEnd" data-index="{{index}}" bindtap="handleCollectionInfo" data-id="{{item.gift_id}}">
        <view class="{{item.is_on_delete ? 'delete' : ''}}">
          <view class="content_item_id">{{item.gift_id}}</view>
          <view class="content_item_name">{{item.gift_name}}</view>
          <view class="content_item_tag">{{item.gift_tag}}</view>
          <view class="content_item_img">
            <image src="{{item.gift_img_src}}" mode="heightFix"></image>
          </view>
          <view class="content_item_delete" catchtap="handleDeleteCollection" data-id="{{item.gift_id}}">删除</view>
        </view>
        
      </view>
    </view>

  </view>

</view>
