/* pages/collect/collect.wxss */

.collect {
  width: 100vw;
  height: 100vh;
}

/* 标题部分 */
.title {
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 50rpx;
  color: rgb(107, 168, 209);

  padding: 30rpx;
}

/* 礼物列表标题部分 */
.content_title {
  background-color: rgb(255, 236, 236);

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 30rpx;

  height: 90rpx;
  padding: 0rpx 25rpx;

  box-sizing: border-box;
}
.content_title > view {
  display: flex;
  justify-content: center;
  align-items: center;

  padding: 0rpx 15rpx;
}
.content_title_id {
  flex: 2;
}
.content_title_name {
  flex: 5;
}
.content_title_tag {
  flex: 4;
}
.content_title_img {
  flex: 6;
}

/* 礼物列表内容部分 */
.content_list_item {
  display: flex;
  justify-content: center;
  align-items: center;

  height: 270rpx;

  border-bottom: 1rpx solid #ccc;

  font-size: 32rpx;

  position: relative;
}

.content_list_item > view {
  position: absolute;
  left: 0;
  top: 0;

  box-sizing: border-box;
  padding: 5rpx 25rpx;

  width: 100%;
  height: 100%;

  display: flex;
  justify-content: center;
  align-items: center;

  transition-delay: 0;
  transition-duration: 500ms;
  transition-property: all;
  transition-timing-function: ease;
}
.content_list_item >.delete {
  top: 0;
  left: -150rpx;
}

.content_list_item > view > view {
  display: flex;
  justify-content: center;
  align-items: center;

  height: 100%;
  padding: 0rpx 15rpx;
}

.content_item_id {
  flex: 2;
}

.content_item_name {
  flex: 5;
}

.content_item_tag {
  flex: 4;
}

.content_item_img {
  flex: 6;
}

.content_item_img > image {
  height: 80%;

  border-radius: 5rpx;
}

.content_item_delete {
  position: absolute;
  z-index: 9;
  top: 0;
  right: -150rpx;

  height: 270rpx;
  width: 150rpx;

  background-color: red;

  color: white;
  font-size: 32rpx;
  letter-spacing: 0.1em;
  font-weight: 500;
}
