/**index.wxss**/

/* 页面整体设置 */
page {
  display: block;

  width: 100vw;
  height: 100vh;

  font-size: 30rpx;
}

.index {
  background-color: var(--theme-color-blue);

  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index::before {
  position: absolute;
  top: 0;
  left: 0;

  content: '';

  background-color: var(--theme-color-pink);

  width: 100%;
  height: 100%;

  clip-path: circle(40% at right 50%);
}

/* 下部礼物信息部分 */
.gift-info {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;

  width: calc(100% - 100rpx);
  height: 300rpx;
  margin: 50rpx;
  padding: 50rpx;

  background-color: rgba(255, 255, 255, 0.75);
  border-radius: 25rpx;
  backdrop-filter: blur(15rpx);
  box-shadow: 5rpx 5rpx 15rpx #ccc;

  box-sizing: border-box;

  flex-grow: 3;
  flex-shrink: 0;
}

.gift-info > view {
  width: 100%;
  height: auto;
}

.content {
  flex-grow: 75%;
  flex-shrink: 0;

  display: flex;
  justify-content: center;
  align-items: center;

  overflow: scroll;

  text-align: left;
  line-height: 1.25em;
}

.detail {
  flex-grow: 25%;
  flex-shrink: 0;

  display: flex;
  justify-content: center;
  align-items: center;
}
.detail > navigator {
  width: 10em;
  height: 2em;
  max-height: 100%;

  font-size: 30rpx;
  line-height: 2.5em;
  text-align: center;
  font-weight: bold;

  border-radius: 25rpx;

  position: relative;
  top: 0;
  left: 0;
}

/* swiper */
.swiper {
  width: 100%;
  height: 600rpx !important;

  flex-grow: 2;
  flex-shrink: 0;
}

.item {
  width: 100%;
  height: 100%;

  position: relative;

  overflow: hidden;
  background-color: white;
  border-radius: 25rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  font-size: 40rpx;
}

.item > image {
  width: 100%;
  height: calc(100% - 4em);

  pointer-events: auto;
}

.item > .title {
  width: 100%;
  height: 2em;
  padding: 0rpx 50rpx;

  overflow: hidden;
  text-overflow: ellipsis;

  letter-spacing: 2rpx;
  font-weight: bold;
  line-height: 2em;
  text-align: center;
}

.item > .like-number {
  width: 100%;
  height: 2em;
  margin: 0;
  padding: 0% 20%;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item > .like {
  position: absolute;
  right: 15rpx;
  bottom: 15rpx;

  font-size: 50rpx;
  line-height: 1.25em;
  text-align: center;
  color: var(--blue);

  width: 1.25em;
  height: 1.25em;

  background-color: rgba(245, 245, 245, 0.75);
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 15rpx #999;
  backdrop-filter: blur(5rpx);

  transition: all 125ms ease 0ms;
}
.item > .like.select {
  color: var(--pink);
}
.item > .like:active {
  right: 10rpx;
  bottom: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx #999;
}

/* 解决cu-custom出现的bug */
.cu-custom .cu-bar {
  left: 0;
  right: 0;
}

.bar {
  color: white;
  font-weight: 500;
  letter-spacing: 2.5rpx;
}
