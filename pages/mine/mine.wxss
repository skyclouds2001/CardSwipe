/* pages/mine/mine.wxss */

page {
  background-color: #ebebeb;
}

.mine {
  width: 100vw;
  height: 100vh;
}

/* 上部用户信息部分 */
.user_info {
  width: 100vw;
  height: 50vh;
  padding: 25rpx 0rpx;

  position: relative;

  overflow: hidden;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img-icon {
  width: 30%;

  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 15rpx #fff;
}

.nickname {
  font-size: 35rpx;
  color: white;
  font-weight: 500;
  letter-spacing: 3rpx;
  text-shadow: 0rpx 0rpx 5rpx #ccc;

  margin-top: 35rpx;
  margin-bottom: 35rpx;
}

.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;

  background-image: unset;
  background-repeat: no-repeat;
  background-position: center center;
  background-origin: border-box;
  background-size: cover;

  filter: blur(5rpx);

  z-index: -1;
}

/* 下部部分 */

.menu {
  max-height: 40vh;
  width: 85vw;
  margin: 5vh auto;

  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx #ccc;
}

.menu > navigator {
  border-bottom: 1rpx solid #ccc;
}
.menu > navigator:last-child {
  border-bottom: none;
}

.item {
  display: flex;
  justify-content: flex-start;
  align-items: center;

  height: 120rpx;
  max-height: 33.33%;
  width: 100%;

  position: relative;
}

.item > view {
  padding-left: 25rpx;
}

.icon {
  font-size: 50rpx;
}

.text {
  font-size: 35rpx;
}

.icon-goto {
  position: absolute;
  right: 25rpx;

  font-size: 40rpx;
  font-weight: normal;
}

/* 选项点击选中改变样式 */
.active {
  background-color: rgb(245, 242, 242);
  color: rgb(230, 120, 120);
}
