<!--pages/mine/mine.wxml-->

<view class="mine">

  <!-- 模态对话框：登录提醒 -->
  <view class="cu-modal {{showModal ? 'show' : ''}}">
    <view class="cu-dialog">
      <view class="cu-bar bg-white justify-end">
        <view class="content">提示</view>
        <view class="action" bindtap="handleModal" data-flag="{{false}}">
          <text class="cuIcon-close text-red"></text>
        </view>
      </view>
      <view class="padding-xl">登录后才可继续使用</view>
      <view class="cu-bar bg-white justify-center">
        <view class="action">
          <button class="cu-btn line-green text-green" bindtap="handleModal" data-flag="{{false}}">取消</button>
          <button class="cu-btn bg-green margin-left" bindtap="handleModal" data-flag="{{true}}">确定</button>
        </view>
      </view>
    </view>
  </view>

  <!-- 上部用户信息部分 -->
  <view class="user_info">
    <image class="img-icon" mode="widthFix" src="{{imgurl}}"></image>
    <view class="nickname">{{nickname}}</view>
    <view class="bg" style="background-image: url({{imgurl}});"></view>
  </view>

  <!-- 下部选项部分 -->
  <view class="menu">

    <navigator class="item {{isActive === 0 ? 'active' : ''}}" hover-stop-propagation bindtouchstart="handleOnChange" bindtouchend="handleOnChange" data-id="{{0}}" url="../../pages/collect/collect">
      <view class="icon cuIcon-favor"></view>
      <view class="text">我的收藏</view>
      <view class="icon-goto cuIcon-right"></view>
    </navigator>

    <navigator class="item {{isActive === 1 ? 'active' : ''}}" hover-stop-propagation bindtouchstart="handleOnChange" bindtouchend="handleOnChange" data-id="{{1}}" url="../../pages/problem/problem">
      <view class="icon cuIcon-mail"></view>
      <view class="text">问题反馈</view>
      <view class="icon-goto cuIcon-right"></view>
    </navigator>

    <navigator class="item {{isActive === 2 ? 'active' : ''}}" hover-stop-propagation bindtouchstart="handleOnChange" bindtouchend="handleOnChange" data-id="{{2}}" url="../../pages/add/add">
      <view class="icon cuIcon-goods"></view>
      <view class="text">礼物添加</view>
      <view class="icon-goto cuIcon-right"></view>
    </navigator>

  </view>

</view>
